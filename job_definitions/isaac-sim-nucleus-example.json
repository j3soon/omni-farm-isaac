{
  "job_type": "base",
  "name": "isaac-sim-nucleus-example",
  "command": "bash",
  "args": ["-c"],
  "job_spec_path": "null",
  "capacity_requirements": {
    "resource_limits": {
      "nvidia.com/gpu": 1
    },
    "env": [
      {
        "name": "OMNI_USER",
        "valueFrom": {
          "secretKeyRef": {
            "key": "OMNI_USER",
            "name": "nucleus-secret"
          }
        }
      },
      {
        "name": "OMNI_PASS",
        "valueFrom": {
          "secretKeyRef": {
            "key": "OMNI_PASS",
            "name": "nucleus-secret"
          }
        }
      }
    ],
    "active_deadline_seconds": 864000
  },
  "container": "j3soon/omni-farm-isaac",
  "allowed_args": {
    "args": {
      "arg": "",
      "default": "echo hi",
      "separator": ""
    }
  }
}
